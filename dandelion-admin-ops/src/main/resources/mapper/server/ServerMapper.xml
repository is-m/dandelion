<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.m.paas.dandelion.admin.ops.server.mapper.ServerMapper">
    
    <resultMap type="com.m.paas.dandelion.admin.ops.server.domain.Server" id="ServerResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="host"    column="host"    />
        <result property="port"    column="port"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="deleted"    column="deleted"    />
    </resultMap>

    <sql id="selectServerVo">
        select id, name, host, port, create_by, create_time, update_by, update_time, remark, deleted from mops_server
    </sql>

    <select id="selectServerList"  resultMap="ServerResult">
        <include refid="selectServerVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="host != null  and host != ''"> and host = #{host}</if>
            <if test="port != null "> and port = #{port}</if>
        </where>
    </select>
    
    <select id="selectServerById" parameterType="Long" resultMap="ServerResult">
        <include refid="selectServerVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertServer"  useGeneratedKeys="true" keyProperty="id">
        insert into mops_server
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null  and name != ''">name,</if>
            <if test="host != null  and host != ''">host,</if>
            <if test="port != null ">port,</if>
            <if test="createBy != null  and createBy != ''">create_by,</if>
            <if test="createTime != null ">create_time,</if>
            <if test="updateBy != null  and updateBy != ''">update_by,</if>
            <if test="updateTime != null ">update_time,</if>
            <if test="remark != null  and remark != ''">remark,</if>
            <if test="deleted != null ">deleted,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null  and name != ''">#{name},</if>
            <if test="host != null  and host != ''">#{host},</if>
            <if test="port != null ">#{port},</if>
            <if test="createBy != null  and createBy != ''">#{createBy},</if>
            <if test="createTime != null ">#{createTime},</if>
            <if test="updateBy != null  and updateBy != ''">#{updateBy},</if>
            <if test="updateTime != null ">#{updateTime},</if>
            <if test="remark != null  and remark != ''">#{remark},</if>
            <if test="deleted != null ">#{deleted},</if>
         </trim>
    </insert>

    <update id="updateServer" >
        update mops_server
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null  and name != ''">name = #{name},</if>
            <if test="host != null  and host != ''">host = #{host},</if>
            <if test="port != null ">port = #{port},</if>
            <if test="createBy != null  and createBy != ''">create_by = #{createBy},</if>
            <if test="createTime != null ">create_time = #{createTime},</if>
            <if test="updateBy != null  and updateBy != ''">update_by = #{updateBy},</if>
            <if test="updateTime != null ">update_time = #{updateTime},</if>
            <if test="remark != null  and remark != ''">remark = #{remark},</if>
            <if test="deleted != null ">deleted = #{deleted},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteServerById" parameterType="Long">
        delete from mops_server where id = #{id}
    </delete>

    <delete id="deleteServerByIds" parameterType="String">
        delete from mops_server where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>